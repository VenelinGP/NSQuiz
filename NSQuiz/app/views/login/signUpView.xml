<page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" >
  <page.actionBar>
        <action-bar title="Sign in" />
    </page.actionBar>
    <scroll-view>
    <stack-layout id="layout">
        <image src="res://logo" stretch="none" horizontalAlignment="center" />
        <grid-layout rows="auto, auto, auto, auto, auto" style.verticalAlignment="midle">

            <text-field id="name" text="{{ name }}" hint="Full Name" returnKeyType="next" returnPress="focusEmail" row="0"/>
            <text-field id="email" text="{{ email }}" hint="Email Address" keyboardType="email" returnKeyType="next" returnPress="focusPassword" autocorrect="false" autocapitalizationType="none" row="1" />
            <text-field id="password" secure="true" text="{{ password }}" hint="Password" returnKeyType="done" returnPress="signIn" row="2" />
            <activity-indicator busy="{{ authenticating }}" rowSpan="2" />
            <button id="signUpButton" row="3" text="Sign Up" width="100"/>
            <Label id="result" text=" " textWrap="true" row="4"/>

        </grid-layout> 
        
        
    </stack-layout>
    </scroll-view>
</page>
textField.android.setHintTextColor(android.graphics.Color.parseColor("#FFFFFF"));