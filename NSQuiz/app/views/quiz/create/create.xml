<StackLayout loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout rows="48, 96, 2*, 2*, 2*, 2*" columns="auto, 1*" padding="4">
        <TextField id="quizTitle" text="{{ quizData.title }}" margin="4"
                   hint="Title" returnKeyType="next"
                   row="0" col="0" colSpan="2"/>
        <TextView id="description" text="{{ quizData.description }}" margin="4"
                   hint="Description" returnKeyType="next"
                   row="1" col="0" colSpan="2" />

        <Label text="Category" cssClass="form-label" textAlignment="right"
                row="2" col="0" backgroundColor="#aaa" />

        <activity-indicator busy="{{ pageIsBusy }}" row="2" col="0" colSpan="2" rowSpan="2" />
        <Button text="{{ quizData.category || 'Select Category' }}" cssClass="btn btn-main" tap="selectCategory"
                row="2" col="1" isEnabled="{{ !pageIsBusy }}"/>

        <Button text="Add Question" id="addQuestion" tap="addQuestion" cssClass="btn btn-main" row="3" />

