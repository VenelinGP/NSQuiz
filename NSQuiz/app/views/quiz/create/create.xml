<StackLayout loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout rows="auto, auto, auto, auto, 1*, auto" padding="4">
        <TextField id="quizTitle" text="{{ title }}"
                   hint="Title" returnKeyType="next" row="0"/>
        <TextField id="description" text="{{ description }}"
                   hint="Description" returnKeyType="done" row="1" />
        <Button text="{{ category || 'Select Category' }}" id="selectCategory" tap="selectCategory"  row="2"/>
        <Button text="Add Question" id="addQuestion" tap="addQuestion"  row="3" />

        <ListView items="{{ questions }}" id="questions container" row="4">
            <ListView.itemTemplate>
                <GridLayout rows="auto, auto" columns="auto, 10*, 2*, 2*" backgroundColor="#fff">
                    <Label text="{{ title }}" id="title" row="0" col="0" colSpan="4" textAlignment="center" />
                    <Label text="Answers" row="1" col="0" verticalAlignment="center" />
                    <label text="{{ answers.length }}" row="1" col="1" verticalAlignment="center" />
                    <Button text="Edit" row="1" col="2" verticalAlignment="center" />
                    <Button text="Delete" row="1" col="3" verticalAlignment="center" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

        <StackLayout row="5" orientation="horizontal">
            <Button  text="Reset" id="resetButton" tap="resetQuiz" width="49%" />
            <Button  text="Create" id="createButton" tap="createQuiz" width="49%" isEnabled = "{{ canSubmit() }}" />
        </StackLayout>

    </GridLayout>
</StackLayout>